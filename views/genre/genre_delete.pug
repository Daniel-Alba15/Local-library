extends ../base

block content
  h1 #{title}: #{genre.name}

  if books.length

    p(style='margin-top:20px;') #[strong Delete the following books before attempting to delete this genre.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Books

      dl
      each book in books
        dt
          a(href=book.url) #{book.title}
        hr

  else
    p(style='margin-top:20px;') Do you really want to delete this genre?

    form(method='POST' action='')
      div(class='form-group')
        input(id='genreid' class='form-control' type='hidden' name='genreid' required='true', value=genre._id)

      button(class='btn btn-primary' type='submit') Delete